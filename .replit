modules = ["php", "php-8.1"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "WordPress Server"

[[workflows.workflow]]
name = "WordPress Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t /tmp/wordpress"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "php -S 0.0.0.0:5000 -t /tmp/wordpress"]

[[ports]]
localPort = 5000
externalPort = 80
